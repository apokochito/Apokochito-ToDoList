<p>
  <strong>Title:</strong>
  <%= @todo_list.title %>
</p>
<p>
  <strong>Description:</strong>
  <%= @todo_list.description %>
</p>
<div id="todo_items_wrapper">
 <%= render @todo_list.todo_items %>
 <div id="form">
  <%= render "todo_items/form" %>
 </div>
</div>
<%= link_to 'Edit', edit_todo_list_path(@todo_list) %> |
<%= link_to 'Back', todo_lists_path %>
<p>
  Download:
  <%= link_to "CSV", todo_list_path(@todo_list, format: "csv") %>
  <%= link_to "PDF", todo_list_path(@todo_list, format: "pdf") %>
</p>
